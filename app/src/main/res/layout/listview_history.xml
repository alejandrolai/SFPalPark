<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Latitude:"
                    android:id="@+id/history_park_lat"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="@string/history_latitude"
                    android:id="@+id/history_latitude"
                    android:hint="Latitude"
                    android:textColor="#333333"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:textIsSelectable="false" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Longitude:"
                    android:id="@+id/textView8"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_longitude"
                    android:text="@string/history_longitude"
                    android:layout_marginTop="0dp"
                    android:hint="Longitude"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time:"
                    android:id="@+id/textView9"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_time"
                    android:layout_marginTop="0dp"
                    android:text="@string/history_time"
                    android:hint="Time"
                    android:inputType="time"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    android:textIsSelectable="true"
                    android:onClick="putOnMap"/>
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/go"
                android:id="@+id/go"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </TableRow>

</LinearLayout>
