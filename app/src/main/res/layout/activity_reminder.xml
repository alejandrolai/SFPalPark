<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:id="@+id/menu"
    android:focusableInTouchMode="true"
    android:background="#EEEEEE"
    android:weightSum="1">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/reminder_title"
        android:id="@+id/menu_settings"
        android:layout_gravity="center_horizontal"
        android:textColor="#DDDDDD"
        android:gravity="center"
        android:background="#DD6600"
        android:autoText="false" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/reminder_setreminder"
            android:id="@+id/textView4"
            android:textColor="#DD6600"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/reminder_currenttime"
                android:id="@+id/textView5"
                android:textColor="#333333" />

            <TextClock
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textClock"
                android:textColor="#000099" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/reminder_entertime"
                android:id="@+id/textView6"
                android:textColor="#333333" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/hour" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:text="hour(s)"
                android:textColor="#ffff890c" />

            <EditText
                android:layout_width="9dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:text=":" />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/minute"
                android:layout_weight="0.15" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:text="minute(s)"
                android:textColor="#ffff9e04" />

        </TableRow>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Timer"
        android:id="@+id/setTimeButton"
        android:onClick="setTimerTime"/>

    <Button
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/buttonStop"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/buttonStart"/>

    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above = "@+id/b"
        android:text="New Text"
        android:id="@+id/viewTime"
        android:layout_weight="0.60"
        android:textSize="50sp"
        android:textColor="#ff0f1215" />

</LinearLayout>
